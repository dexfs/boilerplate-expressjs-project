{
  "name": "boilerplate-expressjs-project",
  "version": "1.0.0",
  "main": "dist/index.js",
  "author": "Andr√© Santos <andre@dexdev.com.br>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "node dist/index.js",
    "watch": "./node_modules/.bin/nodemon src/index.js --exec babel-node",
    "lint": "eslint src/**",
    "precommit": "npm run lint",
    "build": "rimraf ./dist && babel src --ignore *.spec.js,src/database/migrations/*.js,src/database/seeds/**/*.js  --out-dir dist --copy-files",
    "test:watch": "jest --watchAll",
    "test": "jest --coverage"
  },
  "lint-staged": {
    "linters": {
      "src/**/*.{js}": [
        "prettier --write",
        "git add"
      ],
      "test/**/*.{js}": [
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [

    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "bookshelf": "^0.13.3",
    "bookshelf-modelbase": "^2.10.4",
    "bookshelf-soft-delete": "^4.0.0",
    "bookshelf-uuid": "^1.0.0",
    "compression": "^1.7.2",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "helmet": "^3.12.0",
    "knex": "^0.14.6",
    "mongoose": "^5.1.1",
    "pg": "^7.4.3",
    "uuid-v4": "^0.1.0",
    "winston": "^2.4.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-export-default": "^7.0.0-alpha.20",
    "babel-preset-env": "^1.7.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-stage-0": "^6.24.1",
    "dotenv": "^5.0.1",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-flowtype": "^2.46.3",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-prettier": "^2.6.0",
    "faker": "^4.1.0",
    "husky": "^1.3.1",
    "jest": "^22.4.3",
    "lint-staged": "^8.1.5",
    "nodemon": "^1.17.4",
    "prettier": "^1.12.1",
    "rimraf": "^2.6.2",
    "supertest": "^3.1.0"
  }
}
